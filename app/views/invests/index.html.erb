

<% if user_signed_in? %>

  <table class="table table-light table-striped table-bordered table-hover table-sm" >
    <thead class="table-dark">
      <p>
        <tr>
          <th>Asset name<br/><br/></th>
          <th>Buy amount<br/><br/></th>
          <th>Buy price<br/><br/></th>
          <th>Buy fees<br/><br/></th>
          <th>Total input<br/><br/></th>
          <th>Sell amount<br/><br/></th>
          <th>Sell price<br/><br/></th>
          <th>Sell fees<br/><br/></th>
          <th>Total output<br/><br/></th>
          <th colspan='2'></th>
        <tr>
      
      </p>
    </thead>
    
    <tbody>
      <% @invests.each do |invest| %>
        <% if invest.user == current_user %>
        <tr>
          <td><%= link_to invest.asset_name, invest,  class:'btn btn-dark' %> </td>
          <td><%= invest.bought_amount %></td>
          <td><%= invest.buy_price %></td>
          <td><%= invest.buy_fees %></td>
          <td><%= invest.total_input %></td>
          <td><%= invest.sold_amount %></td>
          <td><%= invest.sell_price %></td>
          <td><%= invest.sell_fees %></td>
          <td><%= invest.total_output %></td>
          <td><%= link_to "Edit", edit_invest_path(invest), class:'btn btn-primary' %></td>
          <td><%= link_to "Delete", invest, method: :delete, data: { confirm: 'Are you sure?'},  class:'btn btn-outline-danger' %></td>

        </tr>
        <% end %>
      <% end %> 

    </tbody>
  </table>

  <%= link_to "New Investment", new_invest_path, class:'btn btn-primary' %>
<% else %> 

<h1>Investments tracker</h1>
Your online investments tracker



<% end %>